    <profiles>

        <profile>
            <!--开发环境配置参数据 -->
            <id>dev</id>
            <properties>
                <env>dev</env>
            </properties>
        </profile>
        <profile>
            <!--测试环境配置参数据 -->
            <id>test</id>
            <properties>
                <env>test</env>
            </properties>
        </profile>
        <profile>
            <!--开发环境配置参数据 -->
            <id>unit</id>
            <properties>
                <env>unit</env>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <!--uat环境配置参数据 -->
            <id>uat</id>
            <properties>
                <env>uat</env>
